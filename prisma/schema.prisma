generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum SubscriptionType{
  FREE
  PRO
  BYOK
}

enum Role{
  ADMIN
  USER
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String
  password      String
  emailVerified Boolean   @default(false)
  image         String?
  provider      String?
  providerId    String?
  subscription  SubscriptionType @default(FREE)
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String // shared as cookie
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

