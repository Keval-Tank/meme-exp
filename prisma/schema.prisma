generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Templates {
  id             String      @id
  name           String       
  width          Int
  height         Int
  box_count      Int
  tags           String[]
  url            String
  description    String 
  topics         String[]
  keywords       String[]
  tone           String
  caption_areas  Json         @db.JsonB
  @@map("templates")
}
